pipeline {
    agent any

    stages {
        stage('Login to Docker Hub') {
            steps {
                // Construir a imagem Docker
                script {
                    docker.withRegistry('https://seu-registro-docker.com', 'credenciais-do-registro') {
                    def dockerImage = docker.build('nome-da-imagem:tag', './caminho/do/Dockerfile')
                    dockerImage.push()
                    }
                }
            }
        
        
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'NodeInstalation') {
                    sh 'npm run test'
                    sh 'npm --version'
                }
            }
        }
    }
}