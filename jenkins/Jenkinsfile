pipeline {
    agent any

    stages {
        stage('Login to Docker Hub') {
            steps {
                // Construir a imagem Docker
                script {
                    docker.withRegistry('https://hub.docker.com/') {
                        sh 'docker login -u $DOCKER_USERNAME -p DOCKER_PASSWORD'
                        
                    }
                }
            }
        }
        
        
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'NodeInstalation') {
                    sh 'npm run test'
                    sh 'npm --version'
                }
            }
        }
    }
}
