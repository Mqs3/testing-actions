pipeline {
    agent any

    stages {
        stage('Login to Docker Hub') {
            steps {
                // Construir a imagem Docker
                script {
                    docker.withRegistry('https://hub.docker.com/', 'docker-login') {
                    def dockerImage = docker.build('testing:actions', './Dockerfile')
                    dockerImage.push()
                    }
                }
            }
        
        
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'NodeInstalation') {
                    sh 'npm run test'
                    sh 'npm --version'
                }
            }
        }
    }
}