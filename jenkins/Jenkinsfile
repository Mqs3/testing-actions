pipeline {
    agent any

    stages {
        stage('Login to Docker Hub') {
            steps {
                script{
                    sh 'docker build -t testing/actions .'
                }
            }
        }
        
        
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'NodeInstalation') {
                    sh 'npm run test'
                    sh 'npm --version'
                }
            }
        }
    }
}