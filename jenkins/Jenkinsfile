pipeline {
    agent any

    stages {
        stage('Login to Docker Hub') {
            steps {
                node {
                    def myEnv = docker.build 'my-environment:snapshot'
                    
                }
            }
        }
        
        
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'NodeInstalation') {
                    sh 'npm run test'
                    sh 'npm --version'
                }
            }
        }
    }
}