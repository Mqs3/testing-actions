pipeline {
    agent any

    stages {
        stage('Login to Docker Hub') {
            steps {
                docker.withRegistry('https://docker.com/', 'docker-login') {
                git 'â€¦'
                docker.build('myapp').push('latest')
                }
            }
        }
        
        
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'NodeInstalation') {
                    sh 'npm run test'
                    sh 'npm --version'
                }
            }
        }
    }
}