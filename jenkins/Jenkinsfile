pipeline {
    agent any

    stages {
        stage('Login to Docker Hub') {  
            steps {
                // Construir a imagem Docker
                script {
                    docker.withTool('DockerInstalation') {
                        withCredentials([usernamePassword(credentialsId: 'docker-login', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                            docker.withRegistry('https://hub.docker.com/', 'docker-login'){
                                def customImage = docker.build("myapp:${env.BUILD_ID}")
                                customImage.push()

                            }
                        }
                        // docker.withRegistry('https://hub.docker.com/', 'docker-login'){
                        //     // def customImage = docker.build("myapp:${env.BUILD_ID}")
                        //     // customImage.push()

                        // }

                    }
                    
                }
            }
                
        }
        

        
        
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'NodeInstalation') {
                    sh 'npm run test'
                    sh 'npm --version'
                }
            }
        }
    }
}

